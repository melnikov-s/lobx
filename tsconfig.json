{
	"compilerOptions": {
		"rootDir": "src",
		"target": "es2015",
		"alwaysStrict": false,
		"sourceMap": false,
		"removeComments": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"lib": ["es2015", "DOM"],
		"strictNullChecks": true,
		"declaration": true,
		"declarationDir": "./lib",
		"outDir": "./dist",
		"suppressImplicitAnyIndexErrors": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
