{
	"compilerOptions": {
		"rootDir": "src",
		"target": "es5",
		"alwaysStrict": false,
		"noImplicitReturns": false,
		"noUnusedLocals": false,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"lib": ["es6"],
		"strictNullChecks": false,
		"downlevelIteration": true,
		"experimentalDecorators": true
	},
	"include": ["*.ts"],
	"exclude": ["node_modules"]
}
